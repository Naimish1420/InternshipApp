<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InternshipApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0F1314</item>
        <item name="colorPrimaryVariant">#0F1314</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="edit_14" parent="Widget.AppCompat.EditText">
        <item name="android:paddingHorizontal">@dimen/_15sdp</item>
        <item name="android:paddingVertical">@dimen/_10sdp</item>
        <item name="android:textColor">@color/goldlight</item>
        <item name="android:textColorHint">@color/goldlight</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/custom_border</item>
    </style>

    <style name="check" parent="Widget.AppCompat.CompoundButton.CheckBox" >
        <item name="android:buttonTint">@color/gold</item>
        <item name="android:textColor">@color/goldlight</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="button_s" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:background">@drawable/custom_button_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="button_l" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:background">@drawable/custom_button_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="textview" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/goldlight</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="radio_14" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/gold</item>
        <item name="android:textColor">@color/goldlight</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
</resources>